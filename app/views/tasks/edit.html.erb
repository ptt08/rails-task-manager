<div class="container">
  <h1>Edit task</h1>

  <%= form_with model: @task do |f| %>
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
      <% @task.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :details %><br>
      <%= f.text_area :details, class: "form-control" %>
      <% @task.errors.full_messages_for(:details).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <div>

    <div>
      <%= f.check_box :completed %>
      <%= f.label :completed, "Completed" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <hr>
  <%= link_to "Back to tasks", tasks_path %>
</div>
